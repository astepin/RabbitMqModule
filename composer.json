{
  "name": "astepin/rabbitmq-module",
  "description": "Integrates php-amqplib with Zend Framework 3 and RabbitMq",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",
  "homepage": "https://github.com/astepin/RabbitMqModule",
  "keywords": [
    "zf2",
    "zend framework",
    "rabbitmq",
    "amqp"
  ],
  "authors": [
    {
      "name": "Thomas Vargiu",
      "email": "tommy@ttech.it"
    }
  ],
  "require": {
    "php": "^5.6 || ^7.0",
    "ext-amqp": "*",
    "php-amqplib/php-amqplib": "~2.6",
    "zendframework/zend-stdlib": "~3.0",
    "zendframework/zend-servicemanager": "~3.0",
    "zendframework/zend-modulemanager": "~2.7",
    "zendframework/zend-console": "~2.6",
    "zendframework/zend-mvc-console": "~1.1.10",
    "zendframework/zend-serializer": "~2.7",
    "zendframework/zend-router": "~3.0"
  },
  "require-dev": {
    "phpunit/phpunit": ">=4.2",
    "squizlabs/php_codesniffer": "@stable",
    "phpmd/phpmd" : "@stable",
    "friendsofphp/php-cs-fixer": "@stable",
    "mockery/mockery": "@stable",
    "empi89/php-amqp-stubs": "dev-master",
    "zendframework/zend-test": "~3.0"
  },
  "suggest": {
    "ext-pcntl": "Allows signal handling and process termination"
  },
  "autoload": {
    "psr-4": {
      "RabbitMqModule\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "RabbitMqModule\\": "tests/unit/"
    }
  }
}
